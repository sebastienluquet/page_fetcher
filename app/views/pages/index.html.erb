<h1>Page Fetcher</h1>
<% @page = Page.new %>
<%= render 'form' %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td>
          <%= link_to page do %>
            <%= image_tag page.picture %>
          <% end %>
          <%= link_to page.name, page %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
